<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:padding="4dp">

            <!--                        <Space-->
            <!--                            android:layout_width="338dp"-->
            <!--                            android:layout_height="45dp"-->
            <!--                            android:layout_weight="1" />-->

            <ToggleButton
                android:id="@+id/ascToggleButton"
                android:layout_width="140dp"
                android:layout_height="32dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@drawable/button_round"
                android:checked="false"
                android:text="@string/button_asc"
                android:textColor="@color/menu_bar_button_text"
                android:textOff="@string/button_asc"
                android:textOn="@string/button_asc" />

            <Button
                android:id="@+id/playButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_round"
                android:text="@string/button_play"
                android:textAllCaps="true"
                android:textColor="@color/menu_bar_button_text" />

            <Button
                android:id="@+id/setToSlideshowButton"
                android:layout_width="160dp"
                android:layout_height="32dp"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_round"
                android:text="@string/button_set_slideshow"
                android:textColor="@color/menu_bar_button_text" />

            <ToggleButton
                android:id="@+id/selectModeToggleButton"
                android:layout_width="140dp"
                android:layout_height="32dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@drawable/button_round"
                android:checked="false"
                android:text="@string/button_select"
                android:textColor="@color/menu_bar_button_text"
                android:textOff="@string/button_select"
                android:textOn="@string/button_select" />
        </LinearLayout>

        <androidx.leanback.widget.VerticalGridView
            android:id="@+id/photo_grid"
            android:descendantFocusability="afterDescendants"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:alpha="0.7" />

</RelativeLayout>