<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/menu_bar_background">

        <data>

                <variable
                    name="view_model"
                    type="com.satohk.gphotoframe.viewmodel.SearchBarViewModel" />
        </data>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <TableLayout
                    android:id="@+id/table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/search_bar_margin"
                    android:layout_marginBottom="@dimen/search_bar_margin">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/menu_button_padding_left">

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Media Type"
                                    android:textColor="@color/menu_bar_button_text"
                                    android:textStyle="bold" />

                                <Spinner
                                    android:id="@+id/spinnerMediaType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:entries="@{view_model.mediaTypes}"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:selectedItemPosition="@={view_model.mediaTypeIndex}">

                                        <requestFocus />
                                </Spinner>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/search_bar_group_margin"
                            android:paddingLeft="@dimen/menu_button_padding_left">

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Date Begin"
                                    android:textColor="@color/menu_bar_button_text"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/editTextFromDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ems="10"
                                    android:inputType="date"
                                    android:onClick="showDatePickerDialog"
                                    android:text="@={view_model.fromDateStr}"
                                    android:textColor="@color/menu_bar_button_text" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/search_bar_group_margin"
                            android:paddingLeft="@dimen/menu_button_padding_left">

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Date End"
                                    android:textColor="@color/menu_bar_button_text"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/editTextToDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:ems="10"
                                    android:inputType="date"
                                    android:onClick="showDatePickerDialog"
                                    android:text="@={view_model.toDateStr}"
                                    android:textColor="@color/menu_bar_button_text" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/search_bar_group_margin"
                            android:padding="@dimen/menu_button_padding_left">

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Content  Type"
                                    android:textColor="@color/menu_bar_button_text"
                                    android:textStyle="bold" />

                                <Spinner
                                    android:id="@+id/spinnerContent"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:entries="@{view_model.contentTypes}"
                                    android:selectedItemPosition="@={view_model.contentTypeIndex}" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/search_bar_group_margin"
                            android:padding="@dimen/menu_button_padding_left">

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Filter"
                                    android:textColor="@color/menu_bar_button_text"
                                    android:textStyle="bold" />

                                <Switch
                                    android:id="@+id/switchFilter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:checked="false"
                                    android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/search_bar_group_margin"
                            android:paddingLeft="@dimen/menu_button_padding_left"
                            android:paddingTop="@dimen/search_bar_group_margin"
                            android:paddingBottom="@dimen/search_bar_group_margin">

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/menu_bar_button_text"
                                    android:textStyle="bold" />

                                <SeekBar
                                    android:id="@+id/seekBarFilterThreshold"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:max="10"
                                    android:progress="@={view_model.filterThreshold}" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/search_bar_group_margin"
                            android:paddingLeft="@dimen/menu_button_padding_left">

                                <Button
                                    android:id="@+id/buttonOK"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/menu_bar_button_background"
                                    android:text="OK" />
                        </TableRow>
                </TableLayout>
        </LinearLayout>

</layout>
