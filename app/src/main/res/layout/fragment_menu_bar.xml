<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_bar_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <Button
                    android:id="@+id/account_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/account_button_margin_top_bottom"
                    android:layout_marginBottom="@dimen/account_button_margin_top_bottom"
                    android:background="@drawable/menu_bar_button"
                    android:drawableLeft="@drawable/account_icon"
                    android:padding="@dimen/menu_button_padding_left"
                    android:text="account name"
                    android:textAlignment="textStart"
                    android:textAllCaps="false"
                    android:textColor="@color/menu_bar_button_text" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/menu_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp" />
        </LinearLayout>

</RelativeLayout>